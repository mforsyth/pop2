//colors
$black: #000;
$finn: #6a3252;
$fall_green: #e4ecbd;
$white: #fff;
$vin_rouge: #94356d;
$grandis: #f4d28b;
$citron: #98b318;
$red: red;
$japanese_laurel: green;
$mountain_mist: #999;

//fonts
$font_0: Georgia;

//urls
$img_subnav: url("<%= asset_path('subnav_bg.png') %>");
$img_mission: url("<%= asset_path('our_mission.png') %>");

body {
	text-align: center;
	font-family: $font_0;
	font-size: 9pt;
	color: $black;
}
img {
	border-width: 0;
	&.headshot {
		margin: 10px;
	}
	&.snapshot {
		margin: 10px;
		width: 220px;
		float: right;
	}
	&.earthshare {
		margin: 20px;
	}
}
a {
	color: $black;
}
li {
	margin-left: 20px;
	margin-bottom: 5px;
	list-style-type: disc;
}
#container {
	position: relative;
	width: 800px;
	margin: 0 auto;
	text-align: left;
}
#top_banner {
	position: absolute;
	left: 0;
	top: 0;
	width: 800px;
	height: 137px;
}
#left_bar {
	position: absolute;
	top: 137px;
	left: 0;
	width: 173px;
}
.left_block {
	position: relative;
	left: 0;
	width: 173px;
}
.orange-left-block {
	top: 0;
	left: 0;
	padding-top: 30px;
	padding-left: 20px;
	width: 173px;
	background-image: $img_subnav;
	background-repeat: repeat-y;
	overflow: hidden;
	div {
		padding-bottom: 5px;
		width: 153px;
	}
	a {
		font-style: italic;
		font-size: 10pt;
		text-decoration: none;
	}
	.main {
		font-style: normal;
		font-size: 12pt;
		font-weight: bold;
		color: $finn;
	}
}
#social-links {
	padding-top: 10px;
}
.subnav-top {
	height: 16px;
	margin-top: 1px;
}
.subnav-bottom {
	height: 16px;
	margin-bottom: 1px;
}
#help_us_grow {
	height: 69px;
}
#our_mission {
	background-image: $img_mission;
	background-repeat: no-repeat;
	text-align: center;
	height: 184px;
	padding: 0 22px;
	font-size: 11px;
	line-height: 150%;
	h4 {
		font-size: 14px;
		font-weight: bold;
	}
}

.main_nav {
  position: absolute;
  top: 137px;
  height: 18px;
  width: 100px;
  z-index: 10;
  text-transform: uppercase;
  text-decoration: none;
  padding-top: 2px;
  margin-left:3px;
  margin-right:3px;
  border-radius: 0 0 18px 18px;
  font-size: 7pt;
  text-align: center;
  letter-spacing: 0.1em;
  color: white;
  &.on {
    background-color: $vin_rouge;
  }
  &.off {
    background-color: $black;
  }
}

#welcome_nav, #submenu_welcome {
	left: 147px;
}
#orchards_nav, #submenu_orchards {
	left: 253px;
}
#resources_nav, #submenu_resources {
	left: 359px;
}
#volunteer_nav, #submenu_volunteer {
	left: 465px;
}
#donate_nav, #submenu_donate {
	left: 571px;
}
#about_pop_nav, #submenu_about_pop {
	left: 680px;
}

#right_bar {
	position: absolute;
	top: 137px;
	left: 672px;
	width: 128px;
	z-index: 5;
}
.right_compartment {
	padding-top: 15px;
	padding-bottom: 15px;
	padding-left: 11px;
	padding-right: 11px;
	p {
		margin-top: 10px;
	}
}
#upcoming_events {
	padding-top: 37px;
	background-color: $fall_green;
	h3 {
		font-weight: bold;
	}
}
#plant_counts {
	color: $white;
	background-color: $vin_rouge;
	white-space: nowrap;
	div {
		background-color: $white;
		font-size: 10pt;
		color: $black;
		margin-top: 5px;
		margin-bottom: 5px;
		padding: 5px;
		text-align: center;
		vertical-align: middle;
	}
}
#what_planting {
	background-color: $grandis;
	h3 {
		font-weight: bold;
	}
}
#yield {
	position: absolute;
	top: 180px;
	left: 198px;
	width: 470px;
	h1 {
		margin-top: 25px;
		font-size: 15px;
		margin-bottom: 15px;
	}
	h2 {
		margin-top: 25px;
		font-size: 15px;
		color: $citron;
		margin-bottom: 15px;
	}
	h3 {
		margin-top: 25px;
		font-size: 13px;
		color: $citron;
		margin-bottom: 15px;
	}
	p {
		padding-right: 15px;
		margin-bottom: 15px;
		a {
			color: $citron;
		}
	}
	ul {
		padding-right: 15px;
		margin-bottom: 15px;
	}
}
.note {
	font-style: italic;
}
.label {
	font-weight: bold;
}
#flash_error {
	font-weight: bold;
	font-size: 14px;
	color: $red;
	margin-bottom: 20px;
}
#flash_notice {
	font-weight: bold;
	font-size: 14px;
	color: $japanese_laurel;
	margin-bottom: 20px;
}
#logged_in {
	text-align: right;
}
.cl {
	font-size: 0;
	line-height: 0;
	height: 0;
	display: block;
	clear: both;
}
.submenu {
	position: absolute;
	border: 1px solid $black;
	background-color: $grandis;
	width: 127px;
	top: 158px;
	z-index: 10;
	padding: 10px;
	div {
		margin: 10px;
	}
}
#item_price_1 {
	width: 100px;
}
.num_volunteers_needed {
	font-style: italic;
	font-weight: bold;
	margin-top: 5px;
}
#newsletter {
	border: none;
	overflow-x: hidden;
	overflow-y: scroll;
	h2 {
		font-size: 18px;
	}
	.image {
		margin: 20px 0;
		img {
			width: 100%;
		}
	}
	.caption {
		text-align: center;
		color: $mountain_mist;
		margin: 5px 0 10px;
	}
	#pop_address {
		padding-left: 20px;
	}
	.side-image {
		float: right;
		width: 220px;
		margin: 10px;
		img {
			width: 100%;
		}
	}
}
p.spaced {
	margin-top: 40px;
}

.not_attending {
	color: $mountain_mist;
}
fieldset.event {
	border: 1px dotted $mountain_mist;
	padding: 10px;
	margin-right: 10px;
	margin-bottom: 15px;
}
.event legend {
	font-size: 11pt;
}


.resources {
  width: 98%;

  th {
    font-weight: 1.5;
    color: white;
    background-color: $citron;
  }
      
  td, th {
    padding: 5px;
    border: 1px solid $mountain_mist;
  }
}
